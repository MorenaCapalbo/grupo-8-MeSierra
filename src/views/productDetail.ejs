<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/header.ejs') %>
    <main>
      <div class="banner-grande">
        <img src="/images/bannerOficial.png" alt="" />
      </div>

      <div class="product-detail">
        <article class="detail">
          <img
            src="/images/products/<%= producto.Imagenes[0].nombre_archivo%>"
            alt="producto1"
          />
          <div class="descripcion-texto" style="width: 35vw">
            <div>
              <p style="font-weight: bolder; font-size: 40px">
                <%= producto.nombre_producto %>
              </p>
            </div>
            <div>
              <p
                style="
                  font-weight: bolder;
                  font-size: 20px;
                  margin-bottom: -70px;
                "
              >
                Descripci√≥n de Producto:
              </p>
            </div>
            <div>
              <p style="font-size: 15px"><%= producto.descripcion %></p>
            </div>
            <div>
              <p style="font-weight: bolder; font-size: 30px">
                $<%= producto.precio %>
              </p>
            </div>
          </div>
        </article>
      </div>
      <div class="buy-section">
        <div class="buy-carrito">
          <input type="submit" value="Agregar al carrito" />
        </div>
        <div class="buy-info">
          <img src="/images/mediosPago.jpeg" alt="" />
        </div>
      </div>
    </main>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
