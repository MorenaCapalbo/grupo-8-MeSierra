<!DOCTYPE html>
<html lang="es">
  <%- include('./partials/head.ejs', {title: 'Formulario de creación'}) %>
  <body>
    <%- include('./partials/header.ejs') %>
      <section class="register-section">
        <div class="centrado">
          <h1>Formulario de creación de productos</h1>
        </div>
        <form class="register-form" id="product-creator-form" action="/products/" method="POST" enctype="multipart/form-data">
              <label for="name" class="form-label">Nombre del producto:</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Ej: Zapatillas Reebok"
                class="form-input"
              />
              <label for="price" class="form-label">Precio del producto:</label>
              <input
                type="text"
                id="price"
                name="price"
                placeholder="Ej: 5678"
                class="form-input"
              />
              <label for="discount" class="form-label">Descuento:</label>
              <input
                type="number"
                id="discount"
                name="discount"
                placeholder="Ej: 15"
                class="form-input"
              />
              <label for="estado" class="form-label">Estado:</label>
              <input
                type="text"
                id="estado"
                name="estado"
                placeholder="Ej: 15"
                class="form-input"
              />
              <label for="stock" class="form-label">stock:</label>
              <input
                type="number"
                id="stock"
                name="stock"
                placeholder="Ej: 15"
                class="form-input"
              />
              <label for="category" class="form-label">Categoría:</label>
              <select name="category" id="category" class="form-input">
                <option value="">Elegí</option>
                <option value="in-sale">En oferta</option>
                <option value="visited">Últimos agregados</option>
              </select>
              <label for="marca" class="form-label">Marca:</label>
              <input
                type="text"
                id="marca"
                name="marca"
                placeholder="Ej: Amanda"
                class="form-input"
              />
              <label for="description" class="form-label">Descipción:</label>
              <textarea
                name="description"
                id="description"
                class="form-input"
              ></textarea>
              <label for="imagen" class="form-label">imagen</label>
              <input type="file" id="imagen" name="imagen" class="form-input" />
              <button type="submit" class="buy-now-button">
                Guardar producto
              </button>
        </form>
      </section>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
